# DNS Bench Production Environment Configuration
# Copy this file to .env and configure for your environment

# Application Configuration
NODE_ENV=production
LOG_LEVEL=info

# Network Configuration
FRONTEND_PORT=80
BACKEND_PORT=3001
REDIS_PORT=6379

# Domain Configuration (for reverse proxy setups)
DOMAIN=localhost
CORS_ORIGIN=http://localhost

# Data Storage Paths
DATA_PATH=./data
CONFIG_PATH=./config

# Performance Tuning
MAX_CONCURRENT_BENCHMARKS=3
BENCHMARK_TIMEOUT=30000

# Redis Configuration (optional customization)
# REDIS_PASSWORD=your_secure_password_here
# REDIS_MAXMEMORY=256mb

# Security (set in production)
# REDIS_REQUIREPASS=your_secure_redis_password
# DB_ENCRYPTION_KEY=your_database_encryption_key

# Optional: Custom DNS servers for container resolution
# DNS_SERVERS=8.8.8.8,1.1.1.1

# Optional: Resource limits (uncomment and adjust as needed)
# FRONTEND_MEMORY_LIMIT=512m
# BACKEND_MEMORY_LIMIT=1g
# REDIS_MEMORY_LIMIT=256m

# Optional: Reverse proxy configuration (Traefik, Nginx, etc.)
# ENABLE_SSL=true
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Optional: Monitoring and observability
# ENABLE_METRICS=false
# METRICS_PORT=9090
# ENABLE_HEALTHCHECKS=true

# Development override (leave commented for production)
# NODE_ENV=development