{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "types": ["jest", "node"],
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./web-app/server/src/*"]
    }
  },
  "include": [
    "tests/**/*",
    "web-app/server/src/**/*",
    "web-app/shared/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}